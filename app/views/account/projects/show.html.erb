<%= link_to 'add task', new_account_project_task_path(params[:id]) %>

<% @tasks.each do |task| %>

    <br>
    <%= task.name %>
    <br>
    <%= task.text %>
    <br>
    <%= link_to 'edit', edit_account_project_task_path(task.project_id, task)%>
    <%= link_to 'delete', account_project_task_path(task.project_id, task), :method => :delete %>
<% end %>
